{
    "name": "create-s2ts",
    "version": "0.3.6",
    "description": "A tool to scaffold a s2ts project",
    "main": "dist/index.js",
    "bin": {
        "create-s2ts": "dist/index.js"
    },
    "files": [
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "license": "MIT",
    "keywords": [
        "counter-strike",
        "source",
        "source2",
        "typescript",
        "vts",
        "compiler"
    ],
    "scripts": {
        "build": "tsc && ts-node ./src/postBuild.ts",
        "start": "npm run build && ts-node --transpile-only --project tsconfig.json dist/index.js",
        "publish-npm": "npm run build && npm publish"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@types/node": "^20.14.2",
        "prettier": "^3.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid",
        "printWidth": 160
    }
}
